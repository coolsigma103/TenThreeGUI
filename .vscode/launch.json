{
    "name": "C++: Debug pybind11",
    "type": "cppdbg",
    "request": "launch",
    "program": "${command:python.interpreterPath}",
    "args": [
        "test_module.py"
    ],
    "stopAtEntry": false,
    "cwd": "${workspaceFolder}",
    "externalConsole": false,
    "MIMode": "gdb",
    "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
    ],
    "environment": [
        {
            "name": "PYTHONPATH",
            "value": "${workspaceFolder}/build"
        }
    ],
    "preLaunchTask": "build-pybind11"
}