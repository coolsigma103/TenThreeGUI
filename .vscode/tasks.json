{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-pybind11",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "cmake",
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}