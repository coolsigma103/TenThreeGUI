{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "Python_EXECUTABLE": "${sourceDir}/.venv/bin/python3",
                "Python_ROOT_DIR": "${sourceDir}/.venv"
            },
            "environment": {
                "VIRTUAL_ENV": "${sourceDir}/.venv",
                "PATH": "${sourceDir}/.venv/bin:$penv{PATH}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        }
    ]
}